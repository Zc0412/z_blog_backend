generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  avatar   String
  password String
  role     Role   @default(USER)
}

enum Role {
  USER
  ADMIN
}
